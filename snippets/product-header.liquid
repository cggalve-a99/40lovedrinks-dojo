<div class="product__header">
    <h1 class="site-title__xl">
        {{ product_title }}
    </h1>
    <div class="product__ratings review-ratings">
        <div class="review-ratings__list">
            {% for index in (1..5) %}
                <div class="review-ratings__item">
                    {{ 'icon-star.svg' | inline_asset_content }}
                </div>
            {% endfor %}
        </div>
        <div class="review-ratings__text-content">5 (10 reviews)</div>
    </div>
    <div class="flex flex-wrap align-center product__price">
        <h4>{{ product_price | money }}</h4>
        <p>Tax included. Shipping calculated at checkout.</p>
    </div>
</div>