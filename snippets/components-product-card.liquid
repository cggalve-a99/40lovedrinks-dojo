{% assign button_label = product_title |  split: ' ' %}
{% assign background = product_title | handleize %}

<article class="product-card__item">
    <div class="product-card__item--image" style="background-color: var(--{{ background }})">
        <img 
            src="{{ product_image }}" 
            alt="{{ product_title }}"
            width="100%"
            height="100%"
        >
    </div>
    <div class="product-card__item--header">
        <h3 class="site-title__md">{{ product_title }}</h3>
        {% if show_product_delivery_timeline and product_delivery_timeline != blank %}
        <div class="product-card__item--timeline">{{ product_delivery_timeline }}</div>
        {% endif %}
        <span class="product-card__item--price">{{ product_price | money }}</span>
    </div>
    <a href="{{ product_link }}" class="btn white bordered-black">
        {{ button_label_prefix | append: ' ' | append: button_label[0] }}
    </a>
</article>