<section
  class="
    split-screen content-2-cols
    {% if section.settings.reverse_content %} reverse{% endif %}
    {% if section.settings.dark_mode %} dark{% endif %}
    {% if section.settings.bordered %} bordered{% endif %}
  "
>
  <div class="split-screen-left">
    <div class="content-2-cols__column content-2-cols__column--content">
      {% if section.settings.title != blank %}
        <h2 class="content-2-cols__title site-title__lg">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="content-2-cols__description general-content-container">
          {{ section.settings.description }}
        </div>
      {% endif %}
    </div>
  </div>
  <div class="split-screen-right">
    <div class="content-2-cols__column content-2-cols__column--media">
      {% if section.settings.video_url != blank %}
        <div class="content-2-cols__video">
          <video
            width="100%"
            height="100%"
            playsinline
            autoplay
            loop
            muted
            preload="metadata"
          >
            <source src="{{ section.settings.video_url }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        </div>
      {% elsif section.settings.image != blank %}
        <div class="content-2-cols__image">
          <img
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="{{ section.settings.image.alt | default: section.settings.title }}"
            width="{{ section.settings.image.width | default: 800 }}"
            height="{{ section.settings.image.height | default: 600 }}"
            loading="lazy"
            class="responsive-image"
          >
        </div>
      {% endif %}
    </div>
  </div>
</section>

